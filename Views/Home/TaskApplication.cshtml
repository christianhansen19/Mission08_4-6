@{
    ViewData["Title"] = "Task Form";
}

@model Mission08_4_6.Models.FormResponse

<h1>Add a Task</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="TaskName">Task:</label> <!--Putting the asp for in the label makes it click the box if you click the label - useful for phones-->
        <input asp-for="TaskName" /> <br />

        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" /> <br />

        @*<label asp-for="QuadrantId">Quadrant:</label>
            <select asp-for="QuadrantId">
                <option value="">Select a Quadrant</option>
                @foreach (Quadrant q in ViewBag.Qaudrant)
                {
                <option value="@q.QuadrantId">@q.QuadrantName</option>
                }
            </select>*@

        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="">Select a Category</option>
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select>

        <br />
        <label asp-for="Completed">Completed</label>
        <select asp-for="Completed">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select> <br />

        <button type="submit">Submit Application</button>
    </form>
</div>